<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:paddingBottom="@dimen/row_padding_vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/row_padding_vertical">

    <ImageView
        android:id="@+id/favFragPlaceIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/ic_launcher"
        />
    <TextView
        android:id="@+id/favFragTextViewName"
        android:text="Place title"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_toRightOf="@id/favFragPlaceIcon"
        android:layout_marginLeft="10dp"/>


    <TextView
        android:id="@+id/favFragTextViewAddress"

        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/favFragTextViewName"
        android:layout_toRightOf="@id/favFragPlaceIcon"
        android:layout_marginLeft="10dp"/>

    <ImageView
        android:id="@+id/favIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_toRightOf="@id/favFragTextViewName"
        android:src="@drawable/red"
        android:layout_marginLeft="10dp"
        />



</RelativeLayout>